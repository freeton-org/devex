extends layout

block content
  each collection in collectionList
    .collection-container
      form(action="/minting-tokens", method="post")
        .row.row-name-col
          .col-2
            .text.text-main Collection:
          .col-8.row-name-col
            input.output-col(name="colName" value=collection.name)
            .text.text-sub-main=collection.name
        .row
          .col-2
            .text.text-main Address:
          .col-8
            input.output-col.collection-address(name="colAdd" value=collection.address)
            .text.text-sub-main=collection.address
        .row
          .col.button-main-list
              button.btn.btn-blue.btn-collection-list.btn-submit(type="submit") 
                <svg xmlns="http://www.w3.org/2000/svg" width="26" height="29" fill="currentColor" class="bi bi-file-plus" viewBox="0 1.3 16 16">
                  <path d="M8.5 6a.5.5 0 0 0-1 0v1.5H6a.5.5 0 0 0 0 1h1.5V10a.5.5 0 0 0 1 0V8.5H10a.5.5 0 0 0 0-1H8.5V6z"/>
                  <path d="M2 2a2 2 0 0 1 2-2h8a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V2zm10-1H4a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h8a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1z"/>
                </svg>
                |Minting token
                
              button.btn.btn-blue.btn-collection-list.btn-info-root(id=`${collection.address}` type="button" onclick="fromCollectionListToTokenList(this);")
                <svg xmlns="http://www.w3.org/2000/svg" width="35" height="23" fill="currentColor" class="bi bi-info-square" viewBox="2 0.3 16 16">
                  <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z"/>
                  <path d="m8.93 6.588-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533L8.93 6.588zM9 4.5a1 1 0 1 1-2 0 1 1 0 0 1 2 0z"/>
                </svg>
                |Info root
                span(class="" role="status" aria-hidden="true")
  script(src="/scripts/collection-to-token.js") 